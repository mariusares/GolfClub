@page
@model GolfClub.Pages.Members.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Member</h4>
    <hr />
    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <div class="col-sm-10">
                        @Html.DisplayNameFor(model => model.Member.Name)
                    </div>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.Member.Name)
                    </div>
                    <div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Member.Email)
                    </div>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.Member.Email)
                    </div>
                    <div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Member.Gender)
                    </div>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.Member.Gender)
                    </div>
                    <div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Member.Handicap)
                    </div>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.Member.Handicap)
                    </div>

                </div>
                <div>
                    <a asp-page="./Edit" asp-route-id="@Model.Member?.MemberId">Edit</a> |
                    <a asp-page="./Index">Back to List</a>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="card mx-auto" style="width: 18rem;">
                <div class="card-body">
                    <img class="card-img-top" src="~/images/create.jfif" alt="">
                    <div class="card-body">
                        <small class="card-text">Copyright: Alexander Kesselaar</small>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>